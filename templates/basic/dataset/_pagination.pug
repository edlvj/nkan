ul.pagination.justify-content-center.mb-4
  if current == 1
    li.page-item.disabled
      a.page-link= t('app.pagination.first')
  else    
    li.page-item
      a.page-link(href='/?page=1')= t('app.pagination.first')
  - var i = (Number(current) > 5 ? Number(current) - 4 : 1)
  if i !== 1
    li.page-item.disabled
      a.page-link ...
  - for (; i <= (Number(current) + 4) && i <= pages; i++)
      if i == current
        li.active
          a.page-link= i
      else
        li
          a.page-link(href="/?page=" + i)= i
      if i == Number(current) + 4 && i < pages
        li.disabled
          a.page-link ...
  if current == pages
    li.disabled
      a.page-link= t('app.pagination.last')      
  else
    li
      a.page-link(href="/?page=" + pages)= t('app.pagination.last')