extends ../layout
block title
  title= t('dashboard.new')

block content
  ol.breadcrumb
    li.active= t('dashboard.new')
    include ../_error.pug
  
  form(role='form', action="/dashboard/user", method="post")
    .form-group
      label(for="user_email") Email
      input.form-control(type='email', name="email", id="user_email", required="")
    .form-group
      label(for="user_password")= t('dashboard.user.password')
      input.form-control(type='text', name="password", id="user_password")
    .form-group
      .form-check
        input#adminCheck.form-check-input(type="checkbox", name="admin", value="true")
        label.form-check-label(for="adminCheck")
          | Admin
    button.btn.btn-default(type='submit')= t('dashboard.form.submit')