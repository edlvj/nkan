          i.fa.fa-fw.fa-folder
          span.nav-link-text
            | Category
        ul#collapseCategories.sidenav-second-level.collapse
          li
            a(href='/dashboard/category') All categories
          li
            a(href='/dashboard/category/new') New

      li.nav-item(data-toggle='tooltip', data-placement='right', title='Pages')
        a.nav-link.nav-link-collapse.collapsed(data-toggle='collapse', href='#collapsePages', data-parent='#exampleAccordion')
          i.fa.fa-fw.fa-file
          span.nav-link-text
            | Pages
        ul#collapsePages.sidenav-second-level.collapse
          li
            a(href='/dashboard/page') All pages
          li
            a(href='/dashboard/page/new') New
      li.nav-item(data-toggle='tooltip', data-placement='right', title='Users')
        a.nav-link.nav-link-collapse.collapsed(data-toggle='collapse', href='#collapseUsers', data-parent='#exampleAccordion')
          i.fa.fa-fw.fa-users
          span.nav-link-text
            | Users
        ul#collapseUsers.sidenav-second-level.collapse
          li
            a(href='/dashboard/user') All users
          li
            a(href='/dashboard/user/new') New
