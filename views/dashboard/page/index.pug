extends ../layout
block title
  title
    = t('dashboard.navbar.pages')

block head_scripts
  include ./../_header.pug
  link(href='/css/dataTables.bootstrap4.css', rel='stylesheet')  

block content
  .card.mb-3
    .card-header
      i.fa.fa-table
        = t('dashboard.navbar.pages')
    .card-body
      .table-responsive
        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
          thead
            tr
              th Title
              th Slug
              th Manage
          tbody
            each page in pages
              tr
                td= page.title
                td= page.slug
                td 
                  div(style="display: -webkit-box;")
                    a(href='/dashboard/page/' + page.id) 
                      button.btn
                        = t('dashboard.edit')
                    span 
                    form(method="post" action='/dashboard/page/' + page.id)
                      input(type="hidden" name="_method" value="DELETE")
                      button.btn.btn-danger(type='submit')
                        = t('dashboard.delete')

block footer_scripts
  include ./../_footer.pug
  script(src='/js/jquery.dataTables.js')
  script(src='/js/dataTables.bootstrap4.js')
  script(src='/js/sb-admin-datatables.min.js')
