extends ../layout
block title
  title Pages

block head_scripts
  include ./../_header.pug
  link(href='/css/dataTables.bootstrap4.css', rel='stylesheet')  

block content
  .card.mb-3
    .card-header
      i.fa.fa-table
      | Pages
    .card-body
      .table-responsive
        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
          thead
            tr
              th Title
              th Manage
          tbody
            each page in pages
              tr
                td= page.title
                td 
                  a(href='/dashboard/page/' + page.id) Edit 
                  span |
                  a(href='/dashboard/page/' + page.id)  Delete 

block footer_scripts
  include ./../_footer.pug
  script(src='/js/jquery.dataTables.js')
  script(src='/js/dataTables.bootstrap4.js')
  script(src='/js/sb-admin-datatables.min.js')
