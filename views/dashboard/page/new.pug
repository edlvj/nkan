extends ../layout
block title
  title New page

block content
  ol.breadcrumb
    li.active New Page
  include ../_error.pug  
  
  form(role='form', action="/dashboard/page", method="post")
    .form-group
      label(for="page_title") Title
      input.form-control(type='text', name="title", id="page_title", required="")
    .form-group
      label(for="page_slug") Slug
      input.form-control(type='text', name="slug", id="page_slug", required="")    
    .form-group
      label(for="page_body") Body
      textarea.form-control(name="body", id="page_body", required="")
    button.btn.btn-default(type='submit') Submit