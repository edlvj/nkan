extends ../layout
block title
  title
    = t('dashboard.edit')

block content
  ol.breadcrumb
    li.active
      = t('dashboard.edit')
  include ../_error.pug  
  
  form(role='form', action='/dashboard/page/' + page.id, method="post")
    input(type="hidden" name="_method" value="PUT")
    .form-group
      label(for="page_title")
        = t('dashboard.form.title')
      input.form-control(type='text', name="title", id="page_title", required="", value=page.title)
    .form-group
      label(for="page_slug")
        = t('dashboard.form.slug')
      input.form-control(type='text', name="slug", id="page_slug", required="", value=page.slug)    
    .form-group
      label(for="page_body")
        = t('dashboard.form.body')
      textarea.form-control(name="body", id="page_body", required="")= page.body
    button.btn.btn-default(type='submit')
      = t('dashboard.form.submit')